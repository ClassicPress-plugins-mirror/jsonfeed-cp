<?xml version="1.0"?>
<ruleset name="JSONFeed for ClassicPress">
	<description>JSONFeed for ClassicPress Standards</description>

	<file>./plugin.php</file>
	<file>./includes/jsonfeed-cp.php</file>
	<file>./templates/feed-json.php</file>
	<file>./templates/feed-json-comments.php</file>
	<file>./includes/functions.php</file>
	<rule ref="PHPCompatibility"/>
	<config name="testVersion" value="5.6-"/>
	
	<rule ref="WordPress-Core" />
	<config name="minimum_supported_wp_version" value="4.9"/>
	<rule ref="WordPress.Files.FileName" />
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress.WP.I18n"/>
	<config name="text_domain" value="jsonfeed,default"/>
	 <rule ref="WordPress.WP.DeprecatedFunctions" />

</ruleset>
